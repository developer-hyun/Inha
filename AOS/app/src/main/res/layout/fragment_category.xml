<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category_const"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/category_image"
                android:layout_width="500dp"
                android:layout_height="227dp"
                android:src="@drawable/mr_sunshine"
                app:layout_constraintLeft_toLeftOf="@id/category_const"
                app:layout_constraintRight_toRightOf="@id/category_const"
                app:layout_constraintTop_toTopOf="@id/category_const" />

            <TextView
                android:id="@+id/title_text"
                style="@style/Text.BrownFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:text="CATEGORY"
                app:layout_constraintLeft_toLeftOf="@id/category_const"
                app:layout_constraintTop_toBottomOf="@id/category_image" />

            <androidx.cardview.widget.CardView
                android:id="@+id/movie_card"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3.3dp"
                app:layout_constraintLeft_toLeftOf="@id/category_const"
                app:layout_constraintRight_toRightOf="@id/category_const"
                app:layout_constraintTop_toBottomOf="@id/title_text">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/movie_const"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/category_button_color">

                    <TextView
                        style="@style/Text.BrownFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:text="영화 &amp; 드라마\nMovie &amp; Drama"
                        android:textSize="16.7sp"
                        app:layout_constraintBottom_toBottomOf="@id/movie_const"
                        app:layout_constraintLeft_toLeftOf="@id/movie_const"
                        app:layout_constraintTop_toTopOf="@id/movie_const" />

                    <ImageView
                        android:id="@+id/ranking_image1"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="34.3dp"
                        android:background="@drawable/ic_ranking"
                        app:layout_constraintBottom_toBottomOf="@id/movie_const"
                        app:layout_constraintRight_toRightOf="@id/movie_const" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/food_card"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="21.8dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3.3dp"
                app:layout_constraintLeft_toLeftOf="@id/category_const"
                app:layout_constraintRight_toRightOf="@id/category_const"
                app:layout_constraintTop_toBottomOf="@id/movie_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/food_const"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/category_button_color">

                    <TextView
                        style="@style/Text.BrownFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:text="음식, Food"
                        android:textSize="16.7sp"
                        app:layout_constraintBottom_toBottomOf="@id/food_const"
                        app:layout_constraintLeft_toLeftOf="@id/food_const"
                        app:layout_constraintTop_toTopOf="@id/food_const" />

                    <ImageView
                        android:id="@+id/ranking_image2"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="34.3dp"
                        android:background="@drawable/ic_ranking"
                        app:layout_constraintBottom_toBottomOf="@id/food_const"
                        app:layout_constraintRight_toRightOf="@id/food_const" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/beauty_card"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="21.8dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3.3dp"
                app:layout_constraintLeft_toLeftOf="@id/category_const"
                app:layout_constraintRight_toRightOf="@id/category_const"
                app:layout_constraintTop_toBottomOf="@id/food_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/beauty_const"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/category_button_color">

                    <TextView
                        style="@style/Text.BrownFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:text="뷰티, Beauty"
                        android:textSize="16.7sp"
                        app:layout_constraintBottom_toBottomOf="@id/beauty_const"
                        app:layout_constraintLeft_toLeftOf="@id/beauty_const"
                        app:layout_constraintTop_toTopOf="@id/beauty_const" />

                    <ImageView
                        android:id="@+id/ranking_image3"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="34.3dp"
                        android:background="@drawable/ic_ranking"
                        app:layout_constraintBottom_toBottomOf="@id/beauty_const"
                        app:layout_constraintRight_toRightOf="@id/beauty_const" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/music_card"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="21.8dp"
                android:layout_marginTop="13dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3.3dp"
                app:layout_constraintLeft_toLeftOf="@id/category_const"
                app:layout_constraintRight_toRightOf="@id/category_const"
                app:layout_constraintTop_toBottomOf="@id/beauty_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/music_const"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/category_button_color">

                    <TextView
                        style="@style/Text.BrownFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:text="노래, Music"
                        android:textSize="16.7sp"
                        app:layout_constraintBottom_toBottomOf="@id/music_const"
                        app:layout_constraintLeft_toLeftOf="@id/music_const"
                        app:layout_constraintTop_toTopOf="@id/music_const" />

                    <ImageView
                        android:id="@+id/ranking_image4"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="34.3dp"
                        android:background="@drawable/ic_ranking"
                        app:layout_constraintBottom_toBottomOf="@id/music_const"
                        app:layout_constraintRight_toRightOf="@id/music_const" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>